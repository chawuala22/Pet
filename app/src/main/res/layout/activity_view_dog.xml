<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFE4E8"
    android:orientation="vertical"
    tools:context=".dog.ViewDog">

    <HorizontalScrollView
        android:layout_width="410dp"
        android:layout_height="match_parent"
        android:background="#DFE4E8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DFE4E8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DFE4E8"
            android:orientation="vertical">

         <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="410dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
             android:layout_marginBottom="10dp"
        android:id="@+id/image_activity"/>

          <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nombre"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/bebas"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textColorHint="#000"
        android:textColor="#000"
        android:id="@+id/nombrepet_activity"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:hint="@string/edad"
        android:fontFamily="@font/bebas"
        android:textColorHint="#000"
        android:textColor="#000"
        android:id="@+id/edadpet_activity"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:hint="@string/descrip"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/bebas"
        android:textColorHint="#000"
        android:textColor="#000"
        android:id="@+id/descpetpet_activity"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:text="@string/contacto"
        android:fontFamily="@font/bebas"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="@string/nombre"
        android:fontFamily="@font/bebas"
        android:textColorHint="#000"
        android:textColor="#000"
        android:id="@+id/nombreper_activity"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:hint="@string/direccion"
        android:fontFamily="@font/bebas"
        android:layout_marginLeft="10dp"
        android:textColorHint="#000"
        android:textColor="#000"
        android:id="@+id/direccionper_activity"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/emailper_activity"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:hint="@string/email"
        android:fontFamily="@font/bebas"
        android:textColorHint="#000"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:hint="@string/ciudad_departamento"
        android:fontFamily="@font/bebas"
        android:textColorHint="#000"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        android:id="@+id/ubicacionper_activity"
        />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:hint="@string/numero_telefono"
                android:fontFamily="@font/bebas"
                android:textColorHint="#000"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:id="@+id/numeroper_activity"
                />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
    android:orientation="horizontal">


    <Button
        android:id="@+id/whatsapp"
        android:layout_width="180dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/bordes_redondos"
        android:fontFamily="@font/bebas"
        android:layout_height="wrap_content"
        android:text="Whatsapp" />

    <Button
        android:id="@+id/gmail"
        android:layout_width="180dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bordes_redondos"
        android:fontFamily="@font/bebas"
        android:drawableStart="@drawable/petname"
        android:layout_height="wrap_content"
        android:text="Gmail" />
    </LinearLayout>

        </LinearLayout>
    </ScrollView>
    </HorizontalScrollView>

</LinearLayout>